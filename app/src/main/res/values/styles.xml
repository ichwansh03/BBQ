<resources>

    <!-- Base application theme. -->

    <style name="TextSet">
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/textset_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextArabicSet">
        <item name="android:fontFamily">@font/me_quran</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextMenuSet">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextTitleSet">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextButtonNextSet">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_forward_black_24dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="CardElevations">
        <item name="android:layout_margin">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="cardBackground">
        <item name="android:layout_margin">15dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:src">@drawable/ic_arrow_forward_black_24dp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>
