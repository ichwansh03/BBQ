<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextSet">
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/textset_size</item>
    </style>

    <style name="TextMenuSet">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextTitleSet">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextButtonNextSet">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_forward_black_24dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="CardElevations">
        <item name="android:layout_margin">10dp</item>
        <item name="cardElevation">7dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="LineSet">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
</resources>
