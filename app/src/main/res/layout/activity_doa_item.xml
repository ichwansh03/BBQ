<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_doa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hams_lawan_dari_jahr"
                android:textColor="#23C1E3"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandDoa"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doaArab"
                    android:text="@string/deskripsi"
                    android:textSize="17sp"
                    android:fontFamily="@font/me_quran"
                    android:textAlignment="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doaLatin"
                    android:text="@string/deskripsi"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doaArti"
                    android:text="@string/deskripsi"
                    android:textStyle="italic"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>