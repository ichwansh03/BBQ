            android:text="@string/ratafkhim3"
            android:fontFamily="@font/me_quran"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/desc3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra3"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hukum_ra_desc4"
            android:padding="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="17sp"
            android:id="@+id/desc4"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_hukumra3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratafkhim4"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            android:textColor="#000000"
            android:id="@+id/hukumra_image4"
            app:layout_constraintTop_toBottomOf="@+id/desc4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra4"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc5"
            android:text="@string/hukum_ra_desc5"
            android:padding="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_hukumra4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/hukumra_image5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratafkhim5"
            android:textColor="#000000"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@+id/desc5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra5"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc6"
            android:text="@string/hukum_ra_desc6"
            android:padding="5dp"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_hukumra5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratafkhim6"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            android:id="@+id/hukumra_image6"
            app:layout_constraintTop_toBottomOf="@+id/desc6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra6"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image6"
            app:layout_constraintEnd_toEndOf="parent"
