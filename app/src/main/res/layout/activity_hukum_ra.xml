<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Bookmark.HukumLamdanRa.HukumRaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/bgarticle"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/bg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ra_tafkhim"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_title_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNextBtn"
            android:text="@string/ra_tarqiq"
            android:background="@drawable/button_back"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/desc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hukum_ra_desc"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/textNextBtn"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/hukumra_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratafkhim1"
            android:textColor="#000000"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@+id/desc1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hukum_ra_desc2"
            android:id="@+id/desc2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="17sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_hukumra"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratafkhim2"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            android:textColor="#000000"
            android:id="@+id/hukumra_image2"
            app:layout_constraintTop_toBottomOf="@+id/desc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_hukumra2"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/hukumra_image2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hukum_ra_desc3"
            android:id="@+id/desc3"
            android:fontFamily="@font/poppins_regular"
            android:textSize="17sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_hukumra2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/hukumra_image3"
            android:layout_width="wrap_content"
