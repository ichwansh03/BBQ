<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Tajwid.HukumMad.MadSlhKubraActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabshilahkubra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatingActionButtonStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mad_shilah_kubra"
        style="@style/TextTitleSet"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            style="@style/cardBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextSet"
        android:text="@string/mad_slh_kubra_article" />

    <TextView
        android:id="@+id/image_madsilahkbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/madshilahkb1"
        style="@style/TextArabicSet"/>

        <TextView
            android:id="@+id/image_madsilahkbr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/madshilahkb2"
            style="@style/TextArabicSet"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/play_toggle_madslhkubra"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>