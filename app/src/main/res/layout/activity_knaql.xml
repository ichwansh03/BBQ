<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Bookmark.Khusus.NaqlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>

        <TextView
        android:id="@+id/tlNaql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naql"
        style="@style/TextTitleSet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNextBtn"
        android:text="@string/saktah"
        style="@style/TextButtonNextSet"
        android:layout_below="@id/tlNaql"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_bg"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/textNextBtn">
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/naql_desc"
        style="@style/TextSet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naql1"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/me_quran"
        android:id="@+id/imgNaql"
        android:layout_gravity="center_horizontal"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/play_toggle_naql"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>