<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Tajwid.MimMati.IdghamMislainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idgham_mislain"
        style="@style/TextTitleSet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNextBtn"
        android:text="@string/mad_badal"
        android:layout_below="@id/textTitle"
        style="@style/TextButtonNextSet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rectangle_bg"
            android:layout_below="@id/textNextBtn">
    <TextView
        android:id="@+id/text_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextSet"
        android:text="@string/idgham_mislain_content" />
    <TextView
        android:id="@+id/text_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/izharsy1"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/me_quran"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/playpause_toggle"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>