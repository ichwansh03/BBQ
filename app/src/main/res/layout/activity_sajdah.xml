<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55D0E3"
    tools:context=".Quran.SajdahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title_sajdahayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayat_ayat_sajdah"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp" />
    <View
        android:id="@+id/view_underline"
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:background="@drawable/underline_title"
        android:layout_marginStart="5dp" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textsajdah"
        android:layout_marginTop="20dp"
        android:text="@string/sajdah_desc"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doasujudtilawah"
        android:text="@string/sujudtilawah_text"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:layout_margin="5dp"
        android:fontFamily="@font/me_quran"
        android:textAlignment="center" />
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artidoasujud"
        android:text="@string/sujustilawah_arti"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/doasujudtilawah"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSajdah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollup"
            android:text="@string/scroll_up_untuk_penjelasan"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_regular"
            app:drawableStartCompat="@drawable/ic_arrow_upward_black_24dp" />
    </LinearLayout>
</ScrollView>