<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23C1ED"
    tools:context=".Quran.SajdahActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_sajdahayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayat_ayat_sajdah"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view_underline"
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:background="@drawable/underline_title"
        app:layout_constraintTop_toBottomOf="@id/title_sajdahayat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textsajdah"
        android:layout_marginTop="20dp"
        android:text="@string/sajdah_desc"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/view_underline" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doasujudtilawah"
        android:text="@string/sujudtilawah_text"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:fontFamily="@font/me_quran"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textsajdah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artidoasujud"
        android:text="@string/sujustilawah_arti"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/doasujudtilawah"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSajdah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artidoasujud"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollup"
            android:text="@string/scroll_up_untuk_penjelasan"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_regular"
            android:drawableStart="@drawable/ic_arrow_upward_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/rvSajdah"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>