<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Bookmark.HukumLamdanRa.HukumLamTarqiqActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>

        <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lam_tarqiq"
        style="@style/TextTitleSet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNextBtn"
        android:text="@string/ra_tafkhim"
        android:layout_below="@id/textTitle"
        style="@style/TextButtonNextSet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/textNextBtn"
            android:background="@drawable/rectangle_bg"
            android:layout_marginEnd="15dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hukum_lam_desc2"
        android:id="@+id/hukumlam_desc2"
        style="@style/TextSet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lamtarqiq2"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:fontFamily="@font/me_quran"
            android:id="@+id/hukumlam_image4"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/play_toggle_hukumlam1"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>