<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HukumMad.MadShilahActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:src="@drawable/bgarticle"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/bg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mad_shilah"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_title_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNextBtn"
            android:text="@string/mad_shilah_kubra"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/button_back"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/bg_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:text="@string/mad_silah_article"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNextBtn" />
        <TextView
            android:id="@+id/image_madshilah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madshila1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@+id/desc1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madshila2"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            android:textColor="#000000"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/image_madshilah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_madshilah"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mad_silah_art2"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/play_toggle_madshilah"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madshila3"
            android:textAlignment="center"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/desc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_mdsilahmati"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/image2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/pcmadsilah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mad_silah_pengecualian"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/play_toggle_mdsilahmati"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/pcmadsilah_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madshila4"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/pcmadsilah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_pcmadsilah"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/pcmadsilah_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>