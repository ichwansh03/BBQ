<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Tajwid.HukumMad.MadLiynActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabmadliyniwadh"
        style="@style/FloatingActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/ellipse_background" />


            <TextView
                android:id="@+id/textTitle"
                style="@style/TextTitleSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mad_liyn" />

            <androidx.cardview.widget.CardView
                style="@style/cardBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <me.biubiubiu.justifytext.library.JustifyTextView
                        android:id="@+id/article_liyniwadh"
                        style="@style/TextSet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mad_liyn_article" />

                    <TextView
                        android:id="@+id/example_liyniwadh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextArabicSet"
                        android:text="@string/madlin1" />

                    <TextView
                        android:id="@+id/example2_liyniwadh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/madlin2"
                        style="@style/TextArabicSet"/>

                    <TextView
                        android:id="@+id/example3_liyniwadh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/madlin3"
                        style="@style/TextArabicSet"/>

                    <ImageButton
                        android:id="@+id/play_toggle_liyniwadh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>