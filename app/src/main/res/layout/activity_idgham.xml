<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Tajwid.NunMati.IdghamActivity"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabidgham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatingActionButtonStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hukum_idgham"
            style="@style/TextTitleSet"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            style="@style/cardBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextSet"
            android:text="@string/idgham_article"/>
        <TextView
            android:id="@+id/image_idghambg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idghambg1"
            style="@style/TextArabicSet"/>
        <TextView
            android:id="@+id/image_idghambg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idghambg2"
            style="@style/TextArabicSet"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_idghambg"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idgham_article4"
            style="@style/TextSet" />
        <TextView
            android:id="@+id/image_idghamblg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idghamblg1"
            style="@style/TextArabicSet"/>
        <TextView
            android:id="@+id/image_idghamblg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idghamblg2"
            style="@style/TextArabicSet"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_idghamblg"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pengecualian_idgham"
            style="@style/TextSet" />
        <TextView
            android:id="@+id/pcidgham_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pcidgham1"
            style="@style/TextArabicSet"/>
        <TextView
            android:id="@+id/pcidgham_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pcidgham2"
            style="@style/TextArabicSet"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_pcidgham"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>