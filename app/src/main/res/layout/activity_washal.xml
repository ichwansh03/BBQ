<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Bookmark.Hamzah.WashalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ellipse_background"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hamzah_wasal"
            style="@style/TextTitleSet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNextBtn"
            android:text="@string/hamzah_qath_i"
            style="@style/TextButtonNextSet"
            android:layout_below="@id/textTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/textNextBtn"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rectangle_bg">
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextSet"
            android:text="@string/wasal_desc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal1"
            android:text="@string/wasal1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            android:layout_gravity="center_horizontal"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_toggle_washal1"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wasal_desc2"
            style="@style/TextSet" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal2"
            android:text="@string/wasal15"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/me_quran"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal3"
            android:text="@string/wasal2"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            android:layout_gravity="center_horizontal"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_toggle_washal2"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>