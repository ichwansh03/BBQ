<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Bookmark.Hamzah.WashalActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/bgarticle"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/bg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hamzah_wasal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_title_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNextBtn"
            android:text="@string/hamzah_qath_i"
            android:background="@drawable/button_back"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="@id/bg_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp" />

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/desc_washal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/wasal_desc"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/textNextBtn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal1"
            android:text="@string/wasal1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@id/desc_washal1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_toggle_washal1"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/txarabwashal1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc_washal2"
            android:text="@string/wasal_desc2"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/play_toggle_washal1"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal2"
            android:text="@string/wasal15"
            android:textColor="#000000"
            android:textSize="30sp"
            android:padding="5dp"
            android:fontFamily="@font/me_quran"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/desc_washal2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txarabwashal3"
            android:text="@string/wasal2"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@id/txarabwashal2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_toggle_washal2"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/txarabwashal3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>