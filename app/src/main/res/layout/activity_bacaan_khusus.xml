<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_khusus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bacaan_khusus"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"/>
    <View
        android:id="@+id/view_underline"
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:background="@drawable/underline_title"
        android:layout_below="@+id/title_khusus"
        android:layout_marginStart="15dp" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_underline"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imalah"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/imalah_arab"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txImalah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imalah"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/naql"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/naql_arab"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txNaql"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/naql"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/saktah"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saktah_arab"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txSaktah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saktah"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/isymam"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isymam_arab"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txIsymam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/isymam"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tashil"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tashil_arab"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txTahsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tahsil"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>