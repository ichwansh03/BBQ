<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Bookmark.HukumLamdanRa.HukumRaTarqiqActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:src="@drawable/bgarticle"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/bg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ra_tarqiq"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_title_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNextBtn"
        android:text="@string/idgham_mutamatsilaan"
        android:background="@drawable/button_back"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp" />
    <TextView
        android:id="@+id/desc_ra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ra_tarqiq_desc"
        android:layout_margin="5dp"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/textNextBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/ratarqiq_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ratarqiq1"
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/me_quran"
        app:layout_constraintTop_toBottomOf="@+id/desc_ra1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/ratarqiq_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratarqiq2"
            android:textColor="#000000"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            app:layout_constraintTop_toBottomOf="@+id/ratarqiq_image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/play_toggle_ratarqiq1"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/ratarqiq_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/desc_ra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ra_tarqiq_desc2"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/play_toggle_ratarqiq1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/ratarqiq_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ratarqiq3"
        android:textSize="30sp"
        android:fontFamily="@font/me_quran"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/desc_ra2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
        android:id="@+id/play_toggle_ratarqiq2"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/ratarqiq_image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/desc_ra3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ra_tarqiq_desc3"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/play_toggle_ratarqiq2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratarqiq4"
            android:textColor="#000000"
            android:textSize="30sp"
            android:fontFamily="@font/me_quran"
            android:id="@+id/ratarqiq_image4"
            app:layout_constraintTop_toBottomOf="@+id/desc_ra3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
            android:id="@+id/play_toggle_ratarqiq3"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/ratarqiq_image4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>