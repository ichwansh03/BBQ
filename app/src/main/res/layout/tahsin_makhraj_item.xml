<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <LinearLayout
            android:id="@+id/linear_mad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/alhalq"
                    app:cardCornerRadius="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alhalq_arab"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txAlHalq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/al_halqi_tenggorokan"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/allisan"
                    android:layout_gravity="center_horizontal"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allisan_arab"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txAlLisan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/al_lisan_lidah"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/assyafatain"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assyafa_arab"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txAsSyafatain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/as_syafatain_bibir"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/aljauf"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aljauf_arab"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txAlJauf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/al_jauf_rongga_mulut"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/alkhaisyum"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alkhais_arab"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#23C1E3"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txAlKhaisyum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/al_khaisyum_pangkal_hidung"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>