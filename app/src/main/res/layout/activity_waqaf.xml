<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55D0E3"
    tools:context=".Quran.WaqafActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_waqaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanda_tanda_waqaf"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view_underline"
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:background="@drawable/underline_title"
        app:layout_constraintTop_toBottomOf="@id/title_waqaf"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWaqaf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_underline"
        app:layout_constraintVertical_bias="0.0">
    </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>